# Production Environment Variables
# Copy this file to .env.prod and update the values

# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database Settings
POSTGRES_DB=rttm
POSTGRES_USER=rttm
POSTGRES_PASSWORD=your-secure-database-password
